{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "JSON Schema for transfer",
	"type": "object",
	"properties": {
		"target_user": {
			"type": "string",
			"format": "uuid"
		},
		"amount": {
			"type": "integer"
		},
		"remarks": {
			"type": "string"
		}
	},
	"required": [ "target_user", "amount" ],
	"additionalProperties": false
}
